<Window x:Class="Main.View.StatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:Main.View.StatusControl"
        Title="StatusWindow" Height="230" Width="350">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <l:GeneticStatusControl Grid.Row="0" DataContext="{Binding}"/>
        <Button Grid.Row="2" Content="Stop" Command="{Binding StopCommand}" Margin="5"/>
    </Grid>
</Window>
