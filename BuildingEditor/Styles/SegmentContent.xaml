<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:l="clr-namespace:WPFTest.Logic">
    
    <Style x:Key="SegmentContentStyle" TargetType="Rectangle">
        <Setter Property="Fill" Value="White"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Type}" Value="{x:Static l:SegmentType.FLOOR}">
                <Setter Property="Fill" Value="LightGray"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Preview}" Value="True">
                <Setter Property="Fill" Value="LightGray"/>
                <Setter Property="Opacity" Value="0.8"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>