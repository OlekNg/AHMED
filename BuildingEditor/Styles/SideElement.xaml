<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:l="clr-namespace:WPFTest.Logic">
    
    <Style x:Key="SideElementStyle" TargetType="Rectangle">
        <Setter Property="Fill" Value="White"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Type}" Value="{x:Static l:SideElementType.WALL}">
                <Setter Property="Fill" Value="Blue"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Type}" Value="{x:Static l:SideElementType.DOOR}">
                <Setter Property="Fill" Value="Orange"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding PreviewWall}" Value="True">
                <Setter Property="Fill" Value="Blue"/>
                <Setter Property="Opacity" Value="0.5"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding PreviewDoor}" Value="True">
                <Setter Property="Fill" Value="Orange"/>
                <Setter Property="Opacity" Value="0.5"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>