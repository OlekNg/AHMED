<Window x:Class="WPFTest.RangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose stairs range." Height="120" Width="200"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <TextBlock Text="Floors from "/>
            <TextBox x:Name="uxFrom" Width="30" Text="{Binding From}"/>
            <TextBlock Text=" to "/>
            <TextBox Name="uxTo" Width="30" Text="{Binding To}"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="50" Margin="5"/>
            <Button Content="Ok" Width="50" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
